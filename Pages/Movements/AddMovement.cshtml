@page
@model EstoqueApp.Pages.Movements.AddMovementModel
@{
}

<section>
    <h1>Novo Produto</h1>

    <form method="post" class="mt-4">

        <div class="mb-3">
            <label asp-for="Movement.ProductId" class="form-label">Produto</label>
            <select asp-for="Movement.ProductId" asp-items="Model.Products" class="form-select"></select>
            <span asp-validation-for="Movement.ProductId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Movement.CostCenterId" class="form-label">Centro de Custo</label>
            <select asp-for="Movement.CostCenterId" asp-items="Model.CostCenters" class="form-select"></select>
            <span asp-validation-for="Movement.CostCenterId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Movement.Type" class="form-label">Tipo de Operação</label>
            <select asp-for="Movement.Type" asp-items="Model.Types" class="form-select"></select>
            <span asp-validation-for="Movement.Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Movement.UnitCost" class="form-label">Custo Unitário</label>
            <input asp-for="Movement.UnitCost" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Movement.UnitCost" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Movement.Quantity" class="form-label">Quantidade</label>
            <input asp-for="Movement.Quantity" class="form-control" type="number" />
            <span asp-validation-for="Movement.Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Movement.Notes" class="form-label">Notas</label>
            <input asp-for="Movement.Notes" class="form-control" />
            <span asp-validation-for="Movement.Notes" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>

    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</section>