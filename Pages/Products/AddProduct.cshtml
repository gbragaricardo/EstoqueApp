@page
@model EstoqueApp.Pages.Products.AddProductModel
@{
    Layout = "_LayoutNovo";
}

<!-- Header da página -->
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-3xl font-bold text-gray-800">Adicionar Produto</h1>
        <p class="text-gray-500">Adicione um produto ao catálogo</p>
    </div>
</div>

<form method="post" class="mt-4 space-y-8">

    <!-- Informações Básicas -->
    <div class="px-6 py-4 bg-white rounded-xl shadow-md">
        <h5 class="text-xl font-bold text-gray-700 mb-4">Informações Básicas</h5>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col">
                <label asp-for="Product.Name" class="font-medium text-gray-700">Nome do Produto *</label>
                <input asp-for="Product.Name" class="p-2 border border-gray-300 rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none" />
                <span asp-validation-for="Product.Name" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex flex-col">
                <label asp-for="Product.Sku" class="font-medium text-gray-700">Código do Produto *</label>
                <input asp-for="Product.Sku" class="p-2 border border-gray-300 rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none" />
                <span asp-validation-for="Product.Sku" class="text-red-600 text-sm"></span>
            </div>
        </div>
    </div>

    <!-- Categorização -->
    <div class="px-6 py-4 bg-white rounded-xl shadow-md">
        <h5 class="text-xl font-bold text-gray-700 mb-4">Categorização</h5>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col">
                <label asp-for="Product.CategoryId" class="font-medium text-gray-700">Categoria</label>
                <select asp-for="Product.CategoryId" asp-items="Model.Categories" class="p-2 border border-gray-300 rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none"></select>
                <span asp-validation-for="Product.CategoryId" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex flex-col">
                <label asp-for="Product.MeasureUnitId" class="font-medium text-gray-700">Unidade de Medida</label>
                <select asp-for="Product.MeasureUnitId" asp-items="Model.MeasureUnits" class="p-2 border border-gray-300 rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none"></select>
                <span asp-validation-for="Product.MeasureUnitId" class="text-red-600 text-sm"></span>
            </div>
        </div>
    </div>

    <!-- Informações Financeiras e Estoque -->
    <div class="px-6 py-4 bg-white rounded-xl shadow-md">
        <h5 class="text-xl font-bold text-gray-700 mb-4">Informações Financeiras e Estoque</h5>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="flex flex-col">
                <label asp-for="Product.UnitPrice" class="font-medium text-gray-700">Preço Unitário (R$) *</label>
                <input asp-for="Product.UnitPrice" class="p-2 border border-gray-300 rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none" />
                <span asp-validation-for="Product.UnitPrice" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex flex-col">
                <label asp-for="Product.MinStock" class="font-medium text-gray-700">Estoque Mínimo *</label>
                <input asp-for="Product.MinStock" class="p-2 border border-gray-300 rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none" />
                <span asp-validation-for="Product.MinStock" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex flex-col">
                <label asp-for="Product.CurrentStock" class="font-medium text-gray-700">Estoque Atual *</label>
                <input asp-for="Product.CurrentStock" class="p-2 border border-gray-300 rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none" />
                <span asp-validation-for="Product.CurrentStock" class="text-red-600 text-sm"></span>
            </div>
        </div>
    </div>

    <!-- Descrição -->
    <div class="px-6 py-4 bg-white rounded-xl shadow-md">
        <h5 class="text-xl font-bold text-gray-700 mb-4">Descrição</h5>
        <div class="flex flex-col">
            <textarea asp-for="Product.Description" rows="4" class="p-2 border border-gray-300 rounded-md focus:border-blue-500 focus:ring focus:ring-blue-200 focus:outline-none"></textarea>
            <span asp-validation-for="Product.Description" class="text-red-600 text-sm"></span>
        </div>
    </div>

    <!-- Botões -->
    <div class="flex justify-between">
        <a href="~/Products/" class="bg-gray-500 text-white px-6 py-2 rounded-md hover:bg-gray-600">Cancelar</a>
        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700">Salvar Produto</button>
    </div>
</form>
